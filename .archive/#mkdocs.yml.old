site_name: "Pharns — Cybersecurity & Python Portfolio"
site_url: "https://portfolio.pharns.com"
site_description: "Cybersecurity Analyst portfolio featuring threat detection, incident response, vulnerability assessment, SOC/SIEM labs, and Python automation."
repo_url: "https://github.com/Pharns/portfolio"
repo_name: "pharns/portfolio"
docs_dir: docs
site_dir: site
use_directory_urls: true

theme:
  name: material
  language: en
  features:
    - navigation.tabs
    - navigation.top
    - navigation.sections
    - toc.integrate
    - content.code.copy
    - content.tabs.link
  icon:
    repo: fontawesome/brands/github
  palette:
    - scheme: default
      primary: teal
      accent: indigo
    - scheme: slate
      primary: teal
      accent: indigo
      toggle:
        icon: material/brightness-4
        name: Switch to dark mode

plugins:
  - search
  - sitemap:
      changefreq: daily
      priority: 0.5

extra:
  social:
    cards: true
  analytics:
    provider: google
    property: "G-XXXXXXXXXX"  # ← replace with your GA4 ID

markdown_extensions:
  - admonition
  - attr_list
  - def_list
  - footnotes
  - md_in_html
  - tables
  - toc:
      permalink: true
  - pymdownx.details
  - pymdownx.highlight:
      anchor_linenums: true
      linenums: true
  - pymdownx.inlinehilite
  - pymdownx.superfences

nav:
  - Home: index.md
  - About:
      - Overview (Lite): aboutme(lite).md
      - About (Full): about.md
  - Certifications: certifications.md
  - Cybersecurity:
      - Overview: cybersecurity/index.md
      - Projects & Labs:
          - Homelab Infrastructure: cybersecurity/homelab-infrastructure.md
          - Homelab Journey: cybersecurity/homelab-journey.md
          - Incident Response: cybersecurity/incident-response.md
          - Vulnerability Assessment: cybersecurity/vulnerability-assessment.md
          - Penetration Testing: cybersecurity/penetration-testing.md
          - Drone Payload Systems (Security/RF): cybersecurity/drone-payload-systems.md
          - Blog Write-ups: cybersecurity/blog-writeups.md
  - Python:
      - Overview: python/index.md
      - 100 Days (Index): python/100-days/index.md
      - 100 Days (Featured):
          - Day 01 — Hello World: python/100-days/day01-hello-world.md
          - Day 05 — Password Generator: python/100-days/day05-password-generator.md
          - Day 15 — Coffee Machine: python/100-days/day15-coffee-machine.md
          - Day 25 — Pandas & CSVs: python/100-days/day25-pandas-csvs.md
          - Day 39 — API Requests: python/100-days/day39-api-requests.md
          - Day 54 — Flask Intro: python/100-days/day54-flask-intro.md
          - Day 75 — Data Viz: python/100-days/day75-data-viz.md
      - Projects: python/projects/index.md
  - Innovation: innovation.md
  - Contact: contact.md
