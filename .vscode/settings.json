{
  // ---- Python interpreter (Mac/Linux). On Windows, change to: ${workspaceFolder}\\.venv\\Scripts\\python.exe
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,

  // ---- Formatting & linting
  "editor.formatOnSave": true,
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
  "black-formatter.args": ["--line-length", "88"],

  "ruff.lint.enable": true,
  "ruff.lint.args": ["--select", "E,F,I,B", "--line-length", "88"],
  "ruff.format.enable": false,

  // ---- Type checking
  "mypy-type-checker.args": ["--ignore-missing-imports", "--pretty", "--show-error-codes"],
  "mypy-type-checker.importStrategy": "fromEnvironment",

  // ---- Testing
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],

  // ---- Quality-of-life
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  "python.analysis.typeCheckingMode": "basic"
}
